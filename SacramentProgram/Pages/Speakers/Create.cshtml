@page
@model SacramentProgram.Pages.Speakers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Speaker.PersonID" class="control-label"></label>
                <select asp-for="Speaker.PersonID" class="form-control"
                        asp-items="@Model.PersonDropDown">
                    <option value="">-- Select Person --</option>
                </select>
                <span asp-validation-for="Speaker.PersonID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Speaker.MeetingID" class="control-label"></label>
                <select asp-for="Speaker.MeetingID" class="form-control"
                        asp-items="@Model.MeetingDatesDropDown">
                    <option value="">-- Select Meeting Date --</option>
                </select>
                <span asp-validation-for="Speaker.MeetingID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Speaker.Topic" class="control-label"></label>
                <input asp-for="Speaker.Topic" class="form-control" />
                <span asp-validation-for="Speaker.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
